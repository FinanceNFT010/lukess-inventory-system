{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "command": "bash",
        "args": [".cursor/hooks/load-context.sh"]
      }
    ],
    "afterFileEdit": [
      {
        "command": "bash",
        "args": [".cursor/hooks/format.sh"],
        "timeout": 10
      }
    ],
    "postToolUse": [
      {
        "command": "bash",
        "args": [".cursor/hooks/audit.sh"]
      }
    ]
  }
}
